    <body> 
        <h1>calculadora de tiempos</h1>
        <script>
         var num1=prompt("Dime la hora entera:");
           var num2=prompt("dime los minutos:");
         var num3=prompt("dime los segundos:");
         var res=parseInt(num1)*3600+parseInt(num2)*60+parseInt(num3);
         alert(res)
        </script>
    </body>
